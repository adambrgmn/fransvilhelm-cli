  },
  "scripts": {
    "dev": "pastel dev",
    "build": "pastel build",
    "cli": "./build/cli.js"
  },
  "dependencies": {
    "@fransvilhelm/hooks": "^1.1.0",
    "@types/nanoid": "^2.1.0",
    "cli-spinners": "^2.2.0",
    "execa": "^4.0.0",
    "figures": "^3.1.0",
    "ink": "^2.6.0",
    "lodash": "^4.17.15",
    "nanoid": "^2.1.8",
    "pastel": "^1.0.3",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "read-pkg-up": "^7.0.1"
  },
  "devDependencies": {
    "@types/cli-spinners": "^1.3.0",
    "@types/execa": "^2.0.0",
    "@types/figures": "^3.0.1",
    "@types/ink": "^2.0.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.4",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.17",
    "@types/read-pkg-up": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "6.x",
    "eslint-config-react-app": "5.2.0",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
